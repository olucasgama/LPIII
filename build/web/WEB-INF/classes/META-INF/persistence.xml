<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="sgmc" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>model.Admin</class>
        <class>model.Cliente</class>
        <class>model.Categoria</class>
        <class>model.Colaborador</class>
        <class>model.Endereco</class>
        <class>model.FormaPagamento</class>
        <class>model.Fornecedor</class>
        <class>model.ItemOrdem</class>
        <class>model.ItemVenda</class>
        <class>model.OrdemServico</class>
        <class>model.PerdaDevolucao</class>
        <class>model.Produto</class>
        <class>model.Usuario</class>
        <class>model.Venda</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value = "com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/sgmc"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="javax.persistence.schema-generation.database.action" value="create"/>
            <property name="eclipselink.logging.level" value="FINE"/>
            <property name="eclipselink.logging.level.sql" value="FINE"/>
            <property name="eclipselink.logging.parameters" value="true"/>
            <!--<property name="eclipselink.logging.level.parameters" value="true"/>-->
        </properties>
    </persistence-unit>
</persistence>
